{
  "schemaVersion": 1,
  "id": "hotbarswapper",
  "version": "${mod_version}",

  "name": "Hotbar Swapper",
  "description": "${mod_description}",
  "authors": [
    "iChun"
  ],
  "contact": {
    "homepage": "${mod_url_home}",
    "sources": "${mod_url_sources}",
    "issues": "${mod_url_issues}"
  },

  "license": "${mod_license}",
  "icon": "icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "me.ichun.mods.hotbarswapper.loader.fabric.LoaderFabricClient"
    ],
    "modmenu": [
      "me.ichun.mods.ichunutil.loader.fabric.client.ModMenuIntegration"
    ]
  },

  "mixins": [
    "hotbarswapper.mixins.json"
  ],

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${mod_url_discord}"
      }
    }
  },

  "depends": {
    "fabricloader": ">=0.15.0",
    "fabric-api": "*",
    "minecraft": "1.20.2",
    "java": ">=17",
    "ichunutil": ">=1.0.0"
  }
}
